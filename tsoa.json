{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "controllerPathGlobs": ["src/**/controllers/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/models": "./src/models/",
      "@/enum": "./src/enum/"
    },
    "types": "./src/models"
  }
}
